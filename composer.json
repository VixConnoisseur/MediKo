{
    "name": "mediko/health-system",
    "description": "MediKo - Personal Health Medication and Reminder System",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.4",
        "phpmailer/phpmailer": "^6.6",
        "twilio/sdk": "^7.0",
        "firebase/php-jwt": "^6.0",
        "monolog/monolog": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "MediKo\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
